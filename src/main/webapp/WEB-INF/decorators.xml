<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<decorators defaultdir="/decorators">
	<decorator name="login" page="login.jsp">
		<pattern>/sign-up</pattern>
		<pattern>/sign-in</pattern>
		<pattern>/forgot-password</pattern>
		<pattern>/reset-password</pattern>
	</decorator>
	
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin/*</pattern>
	</decorator>

	<decorator name="user" page="user.jsp">
		<pattern>/*</pattern>
	</decorator>

</decorators>